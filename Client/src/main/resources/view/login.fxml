<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefHeight="323.0" prefWidth="405.0">


    <VBox fx:id="vbox" prefHeight="323.0" prefWidth="405.0" spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/2.2">
        <children>
            <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
            <Button fx:id="loginBtn" contentDisplay="CENTER" onAction="#login" text="LOG IN" textAlignment="CENTER" maxWidth="300"/>
        </children>
    </VBox>


</AnchorPane>
